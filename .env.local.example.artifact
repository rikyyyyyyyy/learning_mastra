# Artifact Service Configuration (Optional - for production use)
# These settings are for future S3/cloud storage integration

# Artifact Storage Configuration
ARTIFACT_STORAGE_TYPE=local  # Options: local, s3, r2, gcs
ARTIFACT_SERVICE_URL=http://localhost:3001

# S3 Configuration (if ARTIFACT_STORAGE_TYPE=s3)
ARTIFACT_S3_BUCKET=your-artifact-bucket
ARTIFACT_S3_REGION=us-east-1
ARTIFACT_S3_ACCESS_KEY=your-access-key
ARTIFACT_S3_SECRET_KEY=your-secret-key
ARTIFACT_S3_ENDPOINT=  # Optional: for S3-compatible services like MinIO

# Cloudflare R2 Configuration (if ARTIFACT_STORAGE_TYPE=r2)
ARTIFACT_R2_ACCOUNT_ID=your-account-id
ARTIFACT_R2_ACCESS_KEY=your-access-key
ARTIFACT_R2_SECRET_KEY=your-secret-key
ARTIFACT_R2_BUCKET=your-bucket-name

# Performance Settings
ARTIFACT_ENABLE_COMPRESSION=true
ARTIFACT_MAX_CHUNK_SIZE=1048576  # 1MB chunks for streaming
ARTIFACT_CACHE_TTL=3600  # Cache TTL in seconds
ARTIFACT_USE_CDN=false  # Enable CDN for read operations

# Database Settings (uses existing MASTRA_DB_URL by default)
# ARTIFACT_DB_URL=  # Optional: separate database for artifacts

# API Settings
ARTIFACT_API_KEY=  # Optional: API key for artifact service
ARTIFACT_API_RATE_LIMIT=100  # Requests per minute